@model IEnumerable<Football_Pool.Models.GameDataModel>

@{
    ViewBag.Title = "View Games";

}

<div class="row">
    <div class="col-md-12 text-center mt-3 mb-3 ml-2"><strong>Game Data</strong></div>
    @using (Html.BeginForm("Index", "GameDataModel", FormMethod.Post))
    {
        <form asp-controller="GameDataModelController" asp-action="Index">
            <p class="ml-3">
                @Html.TextBox("txtSearch")
                <input type="submit" value="Search" /> <span class="ml-3">Search by Year or Year and Week i.e [2018 1] will return Year: 2018, Week: 1</span>
            </p>
           
        </form>
    }
</div>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Away</th>
            <th scope="col">Home</th>
            <th scope="col">Away Record</th>
            <th scope="col">Home Record</th>
            <th scope="col">Away Final Score</th>
            <th scope="col">Home Final Score</th>
            <th scope="col">Away Q1 Score</th>
            <th scope="col">Away Q2 Score</th>
            <th scope="col">Away Q3 Score</th>
            <th scope="col">Away Q4 Score</th>
            <th scope="col">Home Q1 Score</th>
            <th scope="col">Home Q2 Score</th>
            <th scope="col">Home Q3 Score</th>
            <th scope="col">Home Q4 Score</th>
            <th scope="col">Year</th>
            <th scope="col">Week</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Football_Pool.Models.GameDataModel game in Model)
        {
            <tr>
                <td scope="col" style="color: white;">@game.AwayTeamName</td>
                <td scope="col" style="color: white;">@game.HomeTeamName</td>
                <td scope="col">@game.AwayTeamRecord</td>
                <td scope="col">@game.HomeTeamRecord</td>
                <td scope="col" style="color: white;"><strong>@game.AwayFinalScore</strong></td>
                <td scope="col" style="color: white;"><strong>@game.HomeFinalScore</strong></td>
                <td scope="col">@game.AQ1</td>
                <td scope="col">@game.AQ2</td>
                <td scope="col">@game.AQ3</td>
                <td scope="col">@game.AQ4</td>
                <td scope="col">@game.HQ1</td>
                <td scope="col">@game.HQ2</td>
                <td scope="col">@game.HQ3</td>
                <td scope="col">@game.HQ4</td>
                <td scope="col">@game.Year</td>
                <td scope="col">@game.Week</td>
            </tr>
        }

    </tbody>
</table>



